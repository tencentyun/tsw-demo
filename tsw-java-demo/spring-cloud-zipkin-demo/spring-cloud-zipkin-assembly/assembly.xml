<assembly>
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <!-- 需要打包的文件集 -->
    <fileSets>
        <fileSet>
            <directory>${parent.basedir}/script</directory>
            <lineEnding>unix</lineEnding>
            <outputDirectory>./</outputDirectory>
            <fileMode>0755</fileMode>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>${parent.basedir}/sql</directory>
            <outputDirectory>sql</outputDirectory>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>${parent.basedir}/spring-cloud-zipkin-order/target</directory>
            <outputDirectory>./</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>${parent.basedir}/spring-cloud-zipkin-account/target</directory>
            <outputDirectory>./</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>${parent.basedir}/spring-cloud-zipkin-inventory/target</directory>
            <outputDirectory>./</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>${parent.basedir}/spring-cloud-zipkin-logistics/target</directory>
            <outputDirectory>./</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <filtered>false</filtered>
        </fileSet>
        <fileSet>
            <directory>${parent.basedir}/spring-cloud-zipkin-email/target</directory>
            <outputDirectory>./</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <filtered>false</filtered>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${parent.basedir}/README.md</source>
            <outputDirectory>./</outputDirectory>
        </file>
    </files>
</assembly>